        +breadCrumbs({value:'Продукты и решения'},{value:'Документация и материалы'})
        h1.c-title.c-title_lg.c-title_main Документация и материалы
        .c-content.c-content_default
            .row
                .col-2
                    ul.c-aside-menu
                        li.c-aside-menu__btn
                            a.c-aside-btn.c-link(href='#') Название раздела
                        li.c-aside-menu__btn
