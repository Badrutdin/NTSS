extends ../pug/layout
append content
    .c-content.c-content_default
        .container
            .row.mb-5
                .col-12.col-xl-7
                    form.c-search-form(action='#')
                        input.c-input.c-input_style-default.c-input_md.c-input_color-primary(placeholder='Введите запрос...' value='Поисковый запрос' required='' type='text')
                        button.c-search-form__submit.c-btn(type='submit' title='поиск')
                            span
                                svg(fill='none' height='24' width='24' xmlns='http://www.w3.org/2000/svg')
                                    path(d='m21 21-4.5-4.5L21 21Zm-2-10.5a8.5 8.5 0 1 1-17 0 8.5 8.5 0 0 1 17 0v0Z' stroke='#21458C' stroke-linecap='round' stroke-width='2')
            h1.c-title.c-title_lg.c-title_main Результаты поиска
            .row
                .col-2
                    ul.c-aside-menu
                        li.c-aside-menu__btn
                            a.c-aside-btn.c-link.c-aside-btn_active(href='#') Продукция
                        li.c-aside-menu__btn
                            a.c-aside-btn.c-link(href='#') Новости
                .col-10
                    .c-product-list.c-product-list_lg.c-product-list_fixed-item.row
                        +c-product-list__item()
                        +c-product-list__item()
                        +c-product-list__item()
                        +c-product-list__item()
                        +c-product-list__item()
                        +c-product-list__item()



mixin c-product-list__item()
    .c-product-list__item.col-auto
        .c-product-card.c-product-card_md.c-product-card_events
            .c-product-card__actions.c-icon-list
                .c-icon-list__item
                    button.c-btn.c-btn_product-action(type='button')
                        svg(fill='none' height='18' width='18' xmlns='http://www.w3.org/2000/svg')
                            use(xlink:href='images/svg.svg#comparisons' xmlns='http://www.w3.org/1999/xlink')
                .c-icon-list__item
                    button.c-btn.c-btn_product-action(type='button')
                        svg(fill='none' height='20' width='22' xmlns='http://www.w3.org/2000/svg')
                            use(xlink:href='images/svg.svg#favorite' xmlns='http://www.w3.org/1999/xlink')
                .c-icon-list__item
                    button.c-btn.c-btn_product-action(type='button')
                        svg(fill='none' height='16' width='22' xmlns='http://www.w3.org/2000/svg')
                            use(xlink:href='images/svg.svg#eye' xmlns='http://www.w3.org/1999/xlink')
            a.c-product-card__preview(href='#')
                img(alt='' src='images/cupboard.png')
            .c-product-card__description
                .c-product-desc
                    a.c-product-desc__text.c-product-desc__item(href='#') 19" Напольный серверный шкаф NTSS ПРОЦОД МАСТЕР 47U 800х1200 мм сварной в сборе, две dljsfhkdwhsfhdslfhsdl;f
                    .c-product-desc__articul.c-product-desc__item  343423426524345
                    .c-product-desc__price.c-product-desc__item
                        .c-product-price
                            span.c-product-price__item 14 990 ₽
                            span.c-product-price__item.c-product-price__old 19 990 ₽
            .c-product-card__controls
                .c-product-controls
                    .c-product-controls__body
                        .c-product-controls__counter.c-input-counter
                            input.c-input-counter__input.c-input.c-input_md.c-input_style-secondary.c-input_color-primary(type='text' value='1')
                            button.c-input-counter__left-ctrl(type='button') -
                            button.c-input-counter__right-ctrl(type='button') +
                        a.c-product-controls__basket.c-btn.c-btn_style-default.c-btn_color-primary.c-btn_sm(data-basket-btn='' href='#popup-form') В корзину
                    .c-product-controls__footer
                        button.c-product-controls__buy.c-btn.c-btn_style-default.c-btn_color-light.c-btn_sm(href='#' type='button') Купить в один клик