extends ../pug/layout
append content
    #popup-form.c-modal.mfp-hide
        button.mfp-close.modal-close
            svg(fill='none' height='30' width='30' xmlns='http://www.w3.org/2000/svg')
                use(xlink:href='images/svg.svg#modal-close' xmlns='http://www.w3.org/1999/xlink')
        .c-added-basket-section
            .c-added-basket-section__main
                .c-added-basket-section__main-title
                    h2.c-title.c-title_lg.c-title_main.text-center Товар добавлен в корзину
                .c-added-basket-section__main-product
                    .row
                        .col-12.col-lg-8
                            .align-items-center.c-product-card_left-control.c-product-card_card-added.c-product-card.c-product-card_bordered.c-product-card_lg
                                .c-checkbox-primary
                                    input#example-checkbox.c-checkbox.c-checkbox_primary(type='checkbox')
                                    label.c-label.mb-0(for='example-checkbox')
                                a.c-product-card__preview(href='#')
                                    img(alt='' src='images/cupboard.png')
                                .c-product-card__body
                                    .c-product-card__description
                                        .c-product-desc
                                            a.c-product-desc__text.c-product-desc__item(href='#') 19" Напольный серверный шкаф NTSS ПРОЦОД МАСТЕР 47U 800х1200 мм сварной в сборе, двери передняя перфорированная, задние двойные перфорированные, боковые стенки, регулируемые опоры, ролики, RAL 9005
                                            .c-product-desc__articul.c-product-desc__item 343423426524345
                                    .c-product-card__controls
                                        .c-product-controls
                                            .c-product-controls__body
                                                .c-product-controls__counter.c-input-counter
                                                    input.c-input-counter__input.c-input.c-input_md.c-input_style-secondary.c-input_color-primary(type='text' value='1')
                                                    button.c-input-counter__left-ctrl(type='button')
                                                        | -
                                                    button.c-input-counter__right-ctrl(type='button')
                                                        | +
                        .col-12.col-lg-4
                            .c-total-price
                                .c-total-price__item
                                    .row
                                        .col-8
                                            .c-total-price__position Товаров в корзине:
                                        .col-4
                                            .c-total-price__price 3
                                .c-total-price__item
                                    .row
                                        .col-8
                                            .c-total-price__position Стоимость:
                                        .col-4
                                            .c-total-price__price 24 590 ₽
            .c-added-basket-section__related
                h2.c-added-basket-section__related-title С этим товаром покупают
                .c-added-basket-section__related-list
                    .c-product-list.c-product-list_lg.row
                        +c-product-list__item-1()
                        +c-product-list__item-1()
                        +c-product-list__item-1()
                        +c-product-list__item-1()
            .c-added-basket-section__footer
                button.c-btn.c-btn_style-default.c-btn_color-light.c-btn_lg(type='reset') Продолжить покупки
    .container
        h1.c-title.c-title_lg.c-title_main Избранное
        .c-content.c-content_default
            .c-product-list.c-product-list_lg.row
                +c-product-list__item-2()
                +c-product-list__item-2()
                +c-product-list__item-2()
                +c-product-list__item-2()
                +c-product-list__item-2()



