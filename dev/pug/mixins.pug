mixin footerMenuList(...items)
    ul.bottom-menu__list
        each item in items
            li.c-bottom-menu__item
                a.c-bottom-menu__link.c-link(href='#')= item

mixin breadCrumbs(...items)
    -let length = Object.keys(items).length
    -let i = 1
    .c-breadcrumbs
        ul.c-breadcrumbs__list
            li.c-breadcrumbs__item
                a.c-breadcrumbs__link(href='#')
                    span.c-breadcrumbs__title
                        img(alt='' height='14' src='images/home.png' width='14')
            each item in items
                if i === length
                    li.c-breadcrumbs__item
                        span.c-breadcrumbs__title= item.value
                else
                    li.c-breadcrumbs__item
                        a.c-breadcrumbs__link(href='#')
                            span.c-breadcrumbs__title= item.value
                -i++

mixin c-files-list__item(doc)
    a.c-doc-item.c-doc-item_row(download='' href= doc.href target='_blank')
        span.c-doc-item__view
            svg(fill='none' height='24' width='18' xmlns='http://www.w3.org/2000/svg')
                use(xlink:href= doc.icon  xmlns='http://www.w3.org/1999/xlink')
        span.c-doc-item__name= doc.value
        span.c-doc-item__size= doc.size
